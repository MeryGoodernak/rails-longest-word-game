<div class="container">
  <h1 class="display-1 m-3">New game</h1>
  <ul>
    <% @letters.each do |letter| %>
      <li class="btn btn-primary m-1"><%= letter %></li>
    <% end %>
  </ul>
  <form action="/score" method="POST" data-turbo="false" class="mb-3">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="word" class="form-label">
      What is the longest word you can find?
    </label>
    <div class="input-group">
      <input type="text" class="form-control" id="word" name="guess">
      <%= hidden_field_tag :letters, @letters %>
      <!--<input type="hidden" name="letters" value="<%= @letters %>"> -->
      <input type="submit" class="btn btn-primary" value="Play">
    </div>

  </form>

</div>
